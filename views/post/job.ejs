<!DOCTYPE html>
<html>
  <%- include('../components/head') -%>
  <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
  <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
  <body>
    <%- include('../components/navbar') -%>
    <div id="mainPage" style="height: 100%;">
      <%- include('../components/sidebar') -%>
      <div class="column col-xs-12 col-sm-9 col-lg-10" style="margin: auto;" id="main">
        <div class="row">
          <div class="col-md-12 align-center">
            <form action="/post/job" method="post">
              <div class="gram-card">
                <div class="gram-card-header">
                  <img src="<%= user.logo %>" class="gram-card-user-image" />
                  <a class="gram-card-user-name" href="/users/company/@<%= user.username %>"><%= user.name %> @<%= user.username %></a>
                </div>
                <div class="gram-card-content">
                  <br />
                  <div class="form-group">
                    <label for="role">Role*</label>
                    <input type="text" class="form-control" id="role" placeholder="Enter the role for the job here" name="role" required />
                  </div>
                  <div class="form-group">
                    <div class="col-md-6">
                      <label for="experience">Experience required*</label>
                      <select class="form-control" name="experience" required>
                        <option>0-1 years</option>
                        <option>1-3 years</option>
                        <option>3-5 years</option>
                        <option>5-10 years</option>
                        <option>10+ years</option>
                      </select>
                    </div>
                    <div class="col-md-6">
                      <label for="pay">Proposed Salary/Stipend (in Rs)*</label>
                      <input type="number" class="form-control" id="pay" placeholder="Enter amount here" name="pay" required />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="skills">Skills*</label>
                    <input type="name" class="form-control" id="skills" placeholder="HTML, CSS, JavaScript" name="skills" required />
                  </div>
                  <div class="form-group">
                    <label for="description">Job Description*</label>
                    <textarea class="form-control" id="description" placeholder="A short paragraph describing the role" name="description"></textarea>
                  </div>
                  <hr />
                  <br />
                  <button type="submit" class="button primary btn btn-primary">
                    Submit
                  </button>
                  <button type="reset" style="background-color: red;" class="button btn btn-warning">
                    Reset
                  </button>
                </div>
                <br />
                <br />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div id="notify_message" class="notify_message-success"></div>
    <%- include('../components/footer') %> <%- include('../components/tabs') -%>
  </body>
  <script type="text/javascript" src="/scripts/vendor/modernizr.custom.js"></script>
  <script type="text/javascript" src="/scripts/vendor/notificationFx.js"></script>
  <script>
    var simplemde = new SimpleMDE({ element: $("#description")[0] });
  </script>
</html>
